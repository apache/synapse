<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
	<xsl:output method="text"/>
    <xsl:template match="ns:getMarketActivityResponse" xmlns:ns="http://services.samples/xsd">
        <xsl:text>Change, Earnings, High, Last, LastTradeTime, Low, Market Cap, Name, Open, PERatio, PercentChange, PrevClose, Symbol, Volume
</xsl:text>

        <xsl:for-each select="ns:quotes">
            <xsl:value-of select="ns:change"/><xsl:text>, </xsl:text>
            <xsl:value-of select="ns:earnings"/><xsl:text>, </xsl:text>
            <xsl:value-of select="ns:high"/><xsl:text>, </xsl:text>
            <xsl:value-of select="ns:last"/><xsl:text>, </xsl:text>
            <xsl:value-of select="ns:lastTradeTimestamp"/><xsl:text>, </xsl:text>
            <xsl:value-of select="ns:low"/><xsl:text>, </xsl:text>
            <xsl:value-of select="ns:marketCap"/><xsl:text>, </xsl:text>
            <xsl:value-of select="ns:name"/><xsl:text>, </xsl:text>
            <xsl:value-of select="ns:open"/><xsl:text>, </xsl:text>
            <xsl:value-of select="ns:peRatio"/><xsl:text>, </xsl:text>
            <xsl:value-of select="ns:percentageChange"/><xsl:text>, </xsl:text>
            <xsl:value-of select="ns:prevClose"/><xsl:text>, </xsl:text>
            <xsl:value-of select="ns:symbol"/><xsl:text>, </xsl:text>
            <xsl:value-of select="ns:volume"/><xsl:text>
</xsl:text>
        </xsl:for-each>
    </xsl:template>
</xsl:stylesheet>
